<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="MainContainer">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorAccent</item>
    </style>

    <style name="NoteItemBackgroundView">
        <item name="android:background">@color/red</item>
    </style>

    <style name="NoteItemBackgroundViewText">
        <item name="android:color">@color/travertine</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="NoteItemBackgroundViewImage">
        <item name="android:tint">@color/travertine</item>
    </style>

    <style name="NoteItem">
        <item name="android:elevation">@dimen/elevation_medium</item>
        <item name="android:padding">@dimen/padding_margin_small</item>
        <item name="android:layout_marginBottom">@dimen/padding_margin_xsmall</item>
        <item name="android:background">@color/travertine</item>
    </style>

    <style name="NoteItem.Date">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textStyle">italic</item>
        <item name="android:color">@color/light_grey</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="NoteItem.Summary">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:color">@color/dark_grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NoteFragmentDateField">
        <item name="android:layout_marginTop">@dimen/padding_margin_medium</item>
        <item name="android:layout_marginStart">@dimen/padding_margin_large</item>
        <item name="android:layout_marginEnd">@dimen/padding_margin_large</item>
        <item name="android:layout_marginBottom">@dimen/padding_margin_medium</item>
        <item name="android:paddingBottom">@dimen/padding_margin_small</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/note_text_color_selector</item>
        <item name="android:background">@drawable/textview_with_underline</item>
    </style>


    <style name="NoteFragmentField" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColorHint">@color/smalt_blue</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>


    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="NoteFragmentField.Value">
        <item name="android:layout_marginTop">@dimen/padding_margin_medium</item>
        <item name="android:layout_marginStart">@dimen/padding_margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/padding_margin_medium</item>
        <item name="android:paddingBottom">@dimen/padding_margin_medium</item>
        <item name="android:textColor">@color/note_text_color_selector</item>
    </style>

    <style name="NoteFragmentPhotosButton">
        <item name="android:layout_marginTop">@dimen/padding_margin_medium</item>
        <item name="android:layout_marginStart">@dimen/padding_margin_large</item>
        <item name="android:layout_marginEnd">@dimen/padding_margin_large</item>
        <item name="android:paddingBottom">@dimen/padding_margin_xsmall</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/smalt_blue</item>
        <item name="android:background">@drawable/textview_with_underline</item>
    </style>

    <style name="NoteFragmentPhotoList">
        <item name="android:layout_marginTop">@dimen/padding_margin_medium</item>
        <item name="android:layout_marginStart">@dimen/padding_margin_large</item>
        <item name="android:layout_marginEnd">@dimen/padding_margin_large</item>
    </style>

</resources>
